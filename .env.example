# =============================================================================
# Arc - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
APP_VERSION=0.1.0
DEBUG=false

# =============================================================================
# API Server (all from env; no hardcoded defaults in code)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080
# Mission Control UI (use 3001 if 3000 is already in use)
WEBAPP_PORT=3000

# CORS (required for browser â†’ API; comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
# Optional: regex to allow any localhost port (e.g. ^http://(localhost|127\.0\.0\.1)(:\d+)?$)
# CORS_ORIGIN_REGEX=

# =============================================================================
# Security (REQUIRED)
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secure-secret-key-minimum-32-characters-long

# =============================================================================
# Neo4j Database (REQUIRED; all from env)
# =============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =============================================================================
# Redis (from env)
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# =============================================================================
# Elasticsearch (ELK Stack; from env)
# =============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=arc
ES_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# =============================================================================
# LLM Providers (all from env)
# =============================================================================
# At least one is required for AI agent functionality
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# MCP Recon Server URLs (required for real scan results)
# =============================================================================
# Backend calls these URLs to run Subfinder, dnsx, Naabu, Httpx, Katana, Nuclei.
# Use host "mcp-recon" when API runs in Docker (same compose); use "localhost" when API runs on host.
# If all tools return 404, MCP_*_URL likely points to the API or wrong port. Each tool has its own port.
MCP_NAABU_URL=http://mcp-recon:8000
MCP_HTTPX_URL=http://mcp-recon:8001
MCP_SUBFINDER_URL=http://mcp-recon:8002
MCP_DNSX_URL=http://mcp-recon:8003
MCP_KATANA_URL=http://mcp-recon:8004
MCP_NUCLEI_URL=http://mcp-recon:8005
# Extended recon (each tool has its own port)
MCP_GAU_URL=http://mcp-recon:8006
MCP_KNOCKPY_URL=http://mcp-recon:8007
MCP_KITERUNNER_URL=http://mcp-recon:8008
MCP_WAPPALYZER_URL=http://mcp-recon:8009
MCP_WHOIS_URL=http://mcp-recon:8010
MCP_SHODAN_URL=http://mcp-recon:8011
MCP_GITHUB_RECON_URL=http://mcp-recon:8012

# =============================================================================
# MCP Server Ports (for publishing from mcp-recon container)
# =============================================================================
MCP_NAABU_PORT=8000
MCP_HTTPX_PORT=8001
MCP_SUBFINDER_PORT=8002
MCP_DNSX_PORT=8003
MCP_KATANA_PORT=8004
MCP_NUCLEI_PORT=8005
MCP_GAU_PORT=8006
MCP_KNOCKPY_PORT=8007
MCP_KITERUNNER_PORT=8008
MCP_WAPPALYZER_PORT=8009
MCP_WHOIS_PORT=8010
MCP_SHODAN_PORT=8011
MCP_GITHUB_RECON_PORT=8012

# =============================================================================
# Monitoring & Pipeline (optional)
# =============================================================================
# Enable continuous monitoring scheduler (re-scan jobs)
MONITORING_ENABLED=true
MONITORING_DEFAULT_INTERVAL_HOURS=24
# Comma-separated extended recon tools to run in pipeline (overridable in Settings UI)
# Allowed: whois,gau,wappalyzer,shodan,knockpy,kiterunner,github_recon
PIPELINE_EXTENDED_TOOLS=whois,gau,wappalyzer,shodan

# =============================================================================
# Frontend URLs (required; no fallbacks in code)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# External APIs (Optional - for enhanced functionality)
# =============================================================================
# Shodan
SHODAN_API_KEY=

# VirusTotal
VIRUSTOTAL_API_KEY=

# GitHub (for secret hunting)
GITHUB_TOKEN=

# SecurityTrails
SECURITYTRAILS_API_KEY=

# Censys
CENSYS_API_ID=
CENSYS_API_SECRET=
